using Clean.CORE.Entities;
using Microsoft.EntityFrameworkCore;
using System.Collections.Generic;

namespace Clean.DATA.Data
{ 
    public class DataContext : DbContext, IDataContext
    {
        public DbSet<Project> Projects { get; set; }
     
        public DbSet<Employee> Employees { get; set; }
        public DbSet<ProjectAssignment> Assignments { get; set; }

        protected override void OnConfiguring(DbContextOptionsBuilder optionsBuilder)
        {
            optionsBuilder.UseSqlServer("Server=(localdb)\\MSSQLLocalDB;Database=my_db;Trusted_Connection=True");
        }

        // Optional: seed data or model configuration can be added here
        protected override void OnModelCreating(ModelBuilder modelBuilder)
        {
            base.OnModelCreating(modelBuilder);

            // Example seed data was previously used in project; keep seeds in migrations instead
        }
    }
}



